<div class="row text-center">
  <img src="/assets/img/burger.png" alt="burger" id="burger-pic">
  <h2 class="text-center">Eat-da-Burger!</h2>
</div>
<div class="row text-center">
  <div class="col-md-6"><h2>On the Menu</h2>
<ul>
  {{#each burgers}}
 {{#unless this.devoured}}
      <li id="menu">

        <div class="row">
          <div class="col-md-2">
             <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">

          <button class="img" type="submit"><img src="/assets/img/Gene_Belcher.png" title="Eat Me" alt="gene" height="70px" width="53px"></button>
         </form>
          </div>
          <div class="col-md-6">
            <p class="well well-md">{{this.id}}. {{this.burger_name}}</p>
          </div>
        </div>
     </li>
      {{/unless}}
  {{/each}}
</ul></div>
   <div class="col-md-6"><h2>Devoured</h2>
<ul>
  {{#each burgers}}
  {{#if this.devoured}}
      <li>
      
   
        
        <div class="row">
          <div class="col-md-2">
                 <form action="/{{this.id}}?_method=DELETE" method="POST">
 
        <button class="img" type="submit"><img src="/assets/img/Bobbelcher2.png"  title="Delete Me" alt="bob" height="70px" width="53px"></button>
</form>
          </div>
          <div class="col-md-6">
            <p class="well well-md">{{this.id}}. {{this.burger_name}}</p>
          </div>
        </div>

   

     
      </li>
      {{/if}}
  {{/each}}
</ul></div>
</div>

<div class="col-md-6 col-md-offset-3 text-center">
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input class="form-control" type="text" id="burger" name="name">
  </div>

  <button class="btn btn-success" type="submit">Add Burger</button>
</form>
</div>

